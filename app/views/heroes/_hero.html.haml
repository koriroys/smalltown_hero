%li.block
  .photo
    - if hero.pictures.present?
      - image_link = hero.pictures.first.image.thumb
    - else
      - image_link = "user.png"
    = link_to(image_tag(image_link), campaign_hero_path(@campaign, hero))
  .name
    = link_to "#{hero.name}", campaign_hero_path(@campaign, hero), class: :button
